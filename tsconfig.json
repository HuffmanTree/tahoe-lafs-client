{
  "ts-node": {
    "files": true
  },
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": [
      "es2017",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
